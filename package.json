{
  "name": "foodrisk-watch",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "ingest:local": "curl http://127.0.0.1:3000/api/jobs/ingest -H \"X-CRON-DIGEST:$CRON_DIGEST_SECRET\"",
    "digest:local": "curl http://127.0.0.1:3000/api/jobs/digest -H \"X-CRON-DIGEST:$CRON_DIGEST_SECRET\"",
    "generate:digest-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64url'))\""
  },
  "dependencies": {
    "@supabase/supabase-js": "2.94.1",
    "next": "16.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "resend": "^6.9.1"
  },
  "devDependencies": {
    "@types/node": "20.11.24",
    "@types/react": "18.2.58",
    "@types/react-dom": "18.2.19",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.24",
    "eslint": "9.39.2",
    "eslint-config-next": "15.5.12",
    "postcss": "^8.4.35",
    "tailwindcss": "3.4.10",
    "typescript": "5.3.3"
  }
}
